@using Simav.Common
@model Simav.Models.MeclisGundem

@{
    ViewData["Title"] = "GundemDetaylar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>GundemDetaylar</h1>

<div>
    <h4>MeclisGundem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GundemAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GundemAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GundemTuru)
        </dt>
        @if (Model.GundemTuru == (byte)Enums.GundemTuru.GundemKararlari)
        {
            <dd class = "col-sm-10">
            Gündem Kararlari
        </dd>
    }
    else {
        <dd class = "col-sm-10">
            Gündem Maddeleri
        </dd> 
    }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DosyaYolu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DosyaYolu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KisaAciklama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KisaAciklama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Yayinla)
        </dt>
        <dd class = "col-sm-10">
            <input id="cbOnayla" checked="@Convert.ToBoolean(Model.Yayinla)" type="checkbox" />
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="GundemGuncelle" asp-route-id="@Model.GundemId">Güncelle</a>
    <a class="btn btnüinfo" asp-action="Index">Listeye Geri Dön</a>
</div>
