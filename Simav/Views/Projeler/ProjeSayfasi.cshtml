											<strong><span class="percent">@ViewBag.TamamlananProjeSayisi/@ViewBag.ProjeSayisi</span>%</strong>
										</div>
									</div>
								</div>
							</div>
						</div>
					</section>
				</div>
			}
			<div class="col-md-6">
									<section class="panel">
										<header class="panel-heading">
											<h2 class="panel-title">Projelerin Alanına Göre Gerçekleşme Oranı</h2>
										</header>
										<div class="panel-body">
											<div class="row text-center">
							@if (ViewBag.IstihdamProjeSayisi != 0)
							{
								<div class="col-md-4">
										<div class="circular-bar">
											<div class="circular-bar-chart" data-percent="@ViewBag.TamamlananIstihdamProjeSayisi /ViewBag.IstihdamProjeSayisi" data-plugin-options='{ "barColor": "#0088CC", "delay": 300 }'>
												<strong>İstihdam</strong>
												<label><span class="percent"><% =SayiYapilanYuzde0 %></span>%</label>
											</div>
										</div>
									</div>
								}
								@if (ViewBag.TurizmProjeSayisi != 0)
								{
								<div class="col-md-4">
									<div class="circular-bar">
										<div class="circular-bar-chart" data-percent="@ViewBag.TamamlanaTurizmProjeSayisi/ViewBag.TurizmProjeSayisi" data-plugin-options='{ "barColor": "#0088CC", "delay": 300 }'>
											<strong>Turizm</strong>
											<label><span class="percent"><% =SayiYapilanYuzde1 %></span>%</label>
										</div>
									</div>
								</div>
							}
							@if (ViewBag.SehircilikProjeSayisi != 0)
							{
								<div class="col-md-4">
									<div class="circular-bar">
										<div class="circular-bar-chart" data-percent="@ViewBag.TamamlananSehircilikProjeSayisi /ViewBag.SehircilikProjeSayisi" data-plugin-options='{ "barColor": "#0088CC", "delay": 300 }'>
											<strong>Şehircilik</strong>
											<label><span class="percent">@ViewBag.TamamlananSehircilikProjeSayisi /ViewBag.SehircilikProjeSayisi</span>%</label>
										</div>
									</div>
								</div>
							}
							@if (ViewBag.EgitimProjeSayisi != 0)
							{
								<div class="col-md-4">
									<div class="circular-bar">
										<div class="circular-bar-chart" data-percent="@ViewBag.TamamlananEgitimProjeSayisi / ViewBag.EgitimProjeSayisi" data-plugin-options='{ "barColor": "#0088CC", "delay": 300 }'>
											<strong>Eğitim</strong>
											<label><span class="percent">@(ViewBag.TamamlananEgitimProjeSayisi / ViewBag.EgitimProjeSayisi)*100</span>%</label>
										</div>
									</div>
								</div>
							}
							@if (@ViewBag.SosyalProjeSayisi != 0)
							{
								<div class="col-md-4">
									<div class="circular-bar">
										<div class="circular-bar-chart" data-percent="@ViewBag.TamamlananSosyalProjeSayisi/ViewBag.SosyalProjeSayisi" data-plugin-options='{ "barColor": "#0088CC", "delay": 300 }'>
											<strong>Sosyal</strong>
											<label><span class="percent">@(ViewBag.TamamlananSosyalProjeSayisi/ViewBag.SosyalProjeSayisi)*100</span>%</label>
										</div>
									</div>
								</div>
							}
				
				
											</div>
										</div>
									</section>
								</div>
								</div>
								</div>
								</div>
