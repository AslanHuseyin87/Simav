@model Simav.Models.Ihaleler

@{
    ViewData["Title"] = "IhaleDetaylar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script src="~/js/textAreaRO.js"></script>
<h1>@ViewBag.Baslik</h1>

<div>
    <h4>Ihaleler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IhaleAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IhaleAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KisaAciklama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KisaAciklama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icerik)
        </dt>
        <dd class = "col-sm-10">
            <textarea id="local-upload">@Html.DisplayFor(model => model.Icerik)</textarea>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tarih)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tarih)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Onay)
        </dt>
        <dd class = "col-sm-10">
            <input id="cbOnayla" checked="@Convert.ToBoolean(Model.Onay)" type="checkbox" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="IhaleGuncelle" asp-route-id="@Model.IhaleId">Güncelle</a>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
