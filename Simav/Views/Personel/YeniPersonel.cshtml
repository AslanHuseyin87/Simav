@model Simav.Models.Personel

@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script src="~/js/textArea.js"></script> 
<h1>YeniPersonel</h1>

<h4>Personel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="YeniPersonel" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Statu" for="validationServer04" class="form-label">Unvan</label>
            <select asp-for="Statu" class="form-select is-invalid" id="validationServer04" onchange="Unvan()" required>
              <option selected disabled value="">Unvan</option>
              <option value="1">Belediye Başkanı</option>
              <option value="2">Belediye Başkan Yardımcısı</option>
              <option value="3">Meclis Uyesi</option>
              <option value="4">Muhtar</option>
              <option value="5">Müdür</option>
              <option value="6">Müdür Yardımcısı</option>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Unvan" class="control-label"></label>
                <input asp-for="Unvan" class="form-control" />
                <span asp-validation-for="Unvan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formFile" asp-for="Resim" class="form-label">Dosyaları Seç</label>
                <input name="uploaded_File" asp-for="Resim" class="form-control" type="file" id="formFile" accept="image/*">
            </div>
            <div class="form-group">
                <label asp-for="Cv" class="control-label"></label>
                <textarea asp-for="Cv" class="form-control" id="local-upload" ></textarea>
                <span asp-validation-for="Cv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fb" class="control-label"></label>
                <input asp-for="Fb" class="form-control" />
                <span asp-validation-for="Fb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tw" class="control-label"></label>
                <input asp-for="Tw" class="form-control" />
                <span asp-validation-for="Tw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>

