@{
    ViewData["Title"] = "Home Page";
    var haberListesi=ViewData["Haberler"] as List<Haberler>;
    var duyuruListesi=ViewData["Duyurular"] as List<Duyuru>;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i < haberListesi.Count; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
    }
  </ol>
 
  <div class="carousel-inner">
    
@{
     
     <div class="carousel-item active">
      <img class="d-block w-100" src="~/images/Haber_Image/@haberListesi[0].Resim" alt="First slide">
    </div>
    
     for(int i=1;i<haberListesi.Count;i++){

    <div class="carousel-item">
      <img class="d-block w-100" src="~/images/Haber_Image/@haberListesi[i].Resim">
    </div>
    }
}
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
 </div>
 <div class="row ">
							<div class="portfolio-item  col-md-3">
									<a asp-controller="Personel" asp-action="BelediyeBaskani" class="thumb-info">
										<img alt="" class="img-responsive" src="~/images/Personel_Image/adilbicer.png">
										<span class="thumb-info-title">
											<span class="thumb-info-inner">Av. ADİL BİÇER</span>
											<span class="thumb-info-type">Belediye Başkanı</span>
										</span>
									</a>
								</div>
								<div class="col-md-9">
							<div class="tabs tabs-vertical tabs-left">
								<ul class="nav nav-tabs col-sm-3">
									<li class="active">
										<a href="#popular11" data-toggle="tab" aria-expanded="true">Haberler</a>
									</li>
									<li class="">
										<a href="#recent11" data-toggle="tab" aria-expanded="false">Duyurular</a>
									</li>
									<li class="">
										<a href="#recent12" data-toggle="tab" aria-expanded="false">İhaleler</a>
									</li>
									<li class="">
										<a href="#recent13" data-toggle="tab" aria-expanded="false">Videolar</a>
									</li>
									<li class="">
										<a href="#recent14" data-toggle="tab" aria-expanded="false">Vefat İlanları</a>
									</li>
								</ul>
								<div class="tab-content">
									<div id="popular11" class="tab-pane active">
										
										<ul class="nav nav-list primary push-bottom" style="margin-bottom:0px;">
											@{
							int haberSayisi = haberListesi.Count;
							if (haberSayisi > 5)
								haberSayisi = 5;
											for (int i = 0; i < haberSayisi; i++)
											{
												<li><a asp-controller="Haberler" asp-action="HaberDetayi" asp-route-id="@haberListesi[i].HaberlerId">@haberListesi[i].Ad</a></li>
											}
											}
										<li><a asp-controller="Haberler" asp-action="HaberListesi" >TÜM HABERLER</a></li>
								</ul>
									</div>
									<div id="recent11" class="tab-pane">
										<ul class="nav nav-list primary push-bottom" style="margin-bottom:0px;">
										@{
							
							int duyuruSayisi = duyuruListesi.Count;
							if (duyuruSayisi > 5)
								duyuruSayisi = 5;
											for (int i = 0; i < duyuruSayisi; i++)
											{
												<li><a asp-controller="Duyuru" asp-action="DuyuruDetayi" asp-route-id="@duyuruListesi[i].DuyuruId">@duyuruListesi[i].Ad</a></li>
											}
											}
									
									<li><a asp-controller="Duyuru" asp-action="DuyuruListesi">TÜM DUYURULAR</a></li>
								</ul>
									</div>
									<div id="recent12" class="tab-pane">
									<ul class="nav nav-list primary push-bottom" style="margin-bottom:0px;">
										<% Set rec = Connect.Execute("SELECT * FROM Ilanlar ORDER BY Kimlik DESC")
	for i=1 to 5
	if not rec.eof then%>
									<li><a href="ihale.asp?id=<% =rec("Kimlik") %>"><% =rec("ad") %></a></li>
									<%end if
if not rec.eof then
rec.movenext
end if
next%>
									
									<li><a href="ihaleler.asp">TÜM İHALELER</a></li>
								</ul>
									</div>
									<div id="recent13" class="tab-pane">
										<ul class="nav nav-list primary push-bottom" style="margin-bottom:0px;">
										<% Set rec = Connect.Execute("SELECT * FROM Videolar ORDER BY Kimlik DESC")
	for i=1 to 5
	if not rec.eof then%>
									<li><a href="video.asp?id=<% =rec("Kimlik") %>"><% =rec("ad") %></a></li>
									<%end if
if not rec.eof then
rec.movenext
end if
next%>
									
									<li><a href="videolar.asp">TÜM VIDEOLAR</a></li>
								</ul>
									</div>
									<div id="recent14" class="tab-pane">
										<ul class="nav nav-list primary push-bottom" style="margin-bottom:0px;">
										<% Set rec = Connect.Execute("SELECT DISTINCT tarih,onay FROM Olumler WHERE onay=2 ORDER BY tarih DESC")
	for i=1 to 5
	if not rec.eof then
	tarih=rec("tarih")%>
									<li><a href="vefat.asp?tarih=<% =tarih %>"><%= FormatDateTime(tarih, vbLongDate) %>  Vefat İlanları</a></li>
									<%end if
if not rec.eof then
rec.movenext
end if
next%>
									
									<li><a href="vefatlar.asp">TÜM VEFAT İLANLARI</a></li>
								</ul>
									</div>
								</div>
							</div>
						</div>
						
					</div>